# ======================
# App Config
# ======================
APP_ENV=local
APP_PORT=8080

# ======================
# Postgres
# ======================
POSTGRES_HOST=cliprelay-postgres
POSTGRES_PORT=5432
POSTGRES_USER=cliprelay
POSTGRES_PASSWORD=cliprelay
POSTGRES_DB=cliprelay
POSTGRES_SSLMODE=disable

# Example DSN for Go
DATABASE_URL=postgres://cliprelay:cliprelay@cliprelay-postgres:5432/cliprelay?sslmode=disable

# ======================
# Redis
# ======================
REDIS_HOST=cliprelay-redis
REDIS_PORT=6379
REDIS_URL=redis://cliprelay-redis:6379

# ======================
# RabbitMQ
# ======================
RABBITMQ_HOST=cliprelay-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=cliprelay
RABBITMQ_PASS=cliprelay

# Example AMQP URL
RABBITMQ_URL=amqp://cliprelay:cliprelay@cliprelay-rabbitmq:5672/

# ======================
# MinIO
# ======================
MINIO_ENDPOINT=http://cliprelay-minio:9000
MINIO_ACCESS_KEY=cliprelay
MINIO_SECRET_KEY=cliprelay
MINIO_BUCKET=cliprelay-bucket
MINIO_USE_SSL=false

# Public URL that clients use for signed URLs
MINIO_PUBLIC_ENDPOINT=http://localhost:9000

# ======================
# JWT (if needed)
# ======================
JWT_SECRET=supersecretjwtkeyhere123

# ======================
# SSE / Gateway
# ======================
SSE_RETRY_MS=3000
