# ======================
# Outbox Worker Config
# ======================
APP_ENV=local

# Poll interval (ms)
OUTBOX_WORKER_POLL_MS=800

# Max events fetched per cycle
OUTBOX_WORKER_BATCH_SIZE=100

# Lease timeout for stale in_progress rows
OUTBOX_WORKER_LEASE_TIMEOUT_SECONDS=60

# Postgres (local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=cliprelay
POSTGRES_PASSWORD=cliprelay
POSTGRES_DB=cliprelay
POSTGRES_SSLMODE=disable

DATABASE_URL=postgres://cliprelay:cliprelay@127.0.0.1:5432/cliprelay?sslmode=disable

# MQ
MQ_URL=amqp://guest:guest@localhost:5672
