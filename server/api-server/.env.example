# ======================
# App Config
# ======================
APP_ENV=local
APP_PORT=8080
JWT_SECRET=supersecret123
OUTBOX_WORKER_QUEUE_SIZE=10000
OUTBOX_WORKER_BATCHH_SIZE=100

# Gateway Assignment
GATEWAYS=http://sse-gateway1:9002,http://sse-gateway2:9003,http://sse-gateway3:9004
VNODE_COUNT=128

# ======================
# Postgres (local app → Docker container)
# ======================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=cliprelay
POSTGRES_PASSWORD=cliprelay
POSTGRES_DB=cliprelay
POSTGRES_SSLMODE=disable

DATABASE_URL=postgres://cliprelay:cliprelay@127.0.0.1:5432/cliprelay?sslmode=disable

# ======================
# MinIO (local app → Docker container)
# ======================
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=cliprelay
MINIO_SECRET_KEY=cliprelay
MINIO_BUCKET=cliprelay-bucket
MINIO_USE_SSL=false

# Public URL returned to clients
MINIO_PUBLIC_ENDPOINT=http://127.0.0.1:9000

# ======================
# Redis (local app → Docker container)
# ======================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://127.0.0.1:6379/0


