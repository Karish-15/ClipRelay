# ======================
# App Config
# ======================
APP_ENV=local
APP_PORT=8080
JWT_SECRET=supersecret123

# Outbox Worker
OUTBOX_WORKER_QUEUE_SIZE=10000
OUTBOX_WORKER_BATCHH_SIZE=100

# Gateway Assignment (SSE Gateways)
# Gateways are inside the docker network
GATEWAYS=1,2,3
VNODE_COUNT=128

# ======================
# Postgres (containerized)
# ======================
POSTGRES_HOST=cliprelay-postgres
POSTGRES_PORT=5432
POSTGRES_USER=cliprelay
POSTGRES_PASSWORD=cliprelay
POSTGRES_DB=cliprelay
POSTGRES_SSLMODE=disable

DATABASE_URL=postgres://cliprelay:cliprelay@cliprelay-postgres:5432/cliprelay?sslmode=disable

# ======================
# MinIO (containerized local storage)
# ======================
# These values match the MinIO container defined in docker-compose.local.yml
MINIO_ENDPOINT=cliprelay-minio:9000
MINIO_ACCESS_KEY=cliprelay
MINIO_SECRET_KEY=cliprelaysecret
MINIO_BUCKET=cliprelay-bucket
MINIO_USE_SSL=false
MINIO_PUBLIC_ENDPOINT=127.0.0.1:9000


# ======================
# Redis (containerized)
# ======================
REDIS_HOST=cliprelay-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

REDIS_URL=redis://cliprelay-redis:6379/0

# ======================
# RabbitMQ
# ======================
MQ_URL=amqp://cliprelay:cliprelay@cliprelay-rabbitmq:5672/
MQ_QUEUE=cliprelay.events
